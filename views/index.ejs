<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <nav>
    <p><a href="/">Catalog</a></p>
    <p><a href="/stats">Stats</a></p>
  </nav>
  <body>
    <form action="/addBook" method="post">
      <input type="submit" name="add" value="Add a book">
    </form>

    <form action="/updateBook" method="post">
      <input type="submit" name="add" value="Update a book">
      <p>
        <label for="bookToEdit">Book to update:</label>
        <select id="bookToEdit" name="bookToEdit">
          <% bookTitles.forEach((title) => { %>
            <option value="<%= title.title %>"><%= title.title %></option>
          <% }) %>
        </select>
      </p>
    </form>

    <table>
      <thead>
        <tr>
          <% headers.map((header) => { %>
            <th><%= header %></th>
          <% }) %> 
        </tr>
      </thead>
      <tbody>
        <% books.map((book) => { %>
          <tr>
            <% for (let key in book) { %>
              <td><%= book[key] %></td>
            <% } %>
          </tr> 
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
